{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build with Makefile",
			"command": "make",
			"args": [
				"all"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Build project using Makefile"
		},
		{
			"type": "shell",
			"label": "Clean build",
			"command": "make",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Start QEMU",
			"command": "make",
			"args": [
				"qemu"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"problemMatcher": []
		}
	]
}